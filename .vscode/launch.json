    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "USERPROFILE": "/mnt/c/Users/Gene",
                "LOCALAPPDATA": "/mnt/c/Users/Gene/AppData/Local",
                "APPDATA": "/mnt/c/Users/Gene/AppData/Roaming"
            },
            "args": [
                "home"
            ]
        }
    ]
}